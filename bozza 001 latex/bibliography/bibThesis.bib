@article{klinckDysnatremiaMortalitySweat2013,
  title = {Dysnatremia and Mortality: Do Sweat the Small Stuff...},
  shorttitle = {Dysnatremia and Mortality},
  author = {Klinck, John R and McNeill, Lisa and Menon, David K},
  year = {2013},
  journal = {Critical Care},
  volume = {17},
  number = {2},
  pages = {128},
  issn = {1364-8535},
  doi = {10.1186/cc12560},
  urldate = {2024-09-06},
  abstract = {Marked dysnatraemia is associated with increased mortality in patients admitted to intensive care. However, new evidence suggests that even mild deviations from normal and simple variability of sodium values may also be signi cant. Should these ndings prompt clinicians to re-evaluate the approach to uid management in this setting? Sodium disorders, on one hand, are known to result from overzealous administration or restriction of free water or sodium ions. However, they are also associated with a range of co-morbidities and drug treatments that alter water loss and sodium handling in the nephron independently of prescribed uid regimens. Moreover, powerful neuroendocrine and in ammatory responses to surgery, trauma and other acute illness may induce or intensify such changes, altering the response to administered uids. These observations suggest that both patient and treatment variables contribute, but the extent to which sodium disturbances are preventable and whether prevention improves outcome are unknown. Dysnatraemia certainly re ects underlying systemic disorders, but how important is uid management as a cause, and does it contribute independently to poorer outcomes through osmotic or other mechanisms? Although total uid volume and doses of potassium and glucose are regularly adjusted in critically ill patients, sodium is usually delivered at standard concentrations as long as serum values lie within an acceptable range. It may be prudent to pay closer attention to these values, especially when abnormal, when uctuating or when an adverse trend is present. More frequent measurements of sodium in blood, urine and drainage uids, and appropriate adjustment of the sodium content of prescribed uids, may be indicated. Until more light can be shed on the pathophysiology of dysnatraemia in the critically ill, we should assume that better control of plasma sodium levels may yield better outcomes.},
  langid = {english},
  file = {/Users/davidelombardo/Zotero/storage/5KM7MFPQ/Klinck et al. - 2013 - Dysnatremia and mortality do sweat the small stuf.pdf}
}

