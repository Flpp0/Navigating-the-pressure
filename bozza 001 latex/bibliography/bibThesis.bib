@article{wellsRelationshipSerumSodium2012,
  title = {The Relationship between Serum Sodium and Intracranial Pressure When Using Hypertonic Saline to Target Mild Hypernatremia in Patients with Head Trauma},
  author = {Wells, Diana L and Swanson, Joseph M and Wood, G Christopher and Magnotti, Louis J and Boucher, Bradley A and Croce, Martin A and Harrison, Charles G and Muhlbauer, Michael S and Fabian, Timothy C},
  year = {2012},
