  shorttitle = {Prognostic Value of Time-Related {{Glasgow}} Coma Scale Components in Severe Traumatic Brain Injury},
  author = {Kouloulas, Efthimios J. and Papadeas, Alexandros G. and Michail, Xanthi and Sakas, Damianos E. and Boviatsis, Efstathios J.},
