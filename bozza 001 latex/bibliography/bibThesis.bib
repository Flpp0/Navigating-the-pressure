  author = {Spiegel, Rory and Teeter, William and Sullivan, Scott and Tupchong, Keegan and Mohammed, Nabeel and Sutherland, Mark and Leibner, Evan and Rola, Philippe and Galvagno, Samuel M. and Murthi, Sarah B.},
