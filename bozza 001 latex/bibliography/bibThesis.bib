@article{dambrosioInterhemisphericIntracranialPressure2002,
  title = {Interhemispheric Intracranial Pressure Gradients in Nonhuman Primate Stroke},
  author = {D'Ambrosio, Anthony L. and Hoh, Daniel J. and Mack, William J. and Winfree, Christopher J. and Nair, M. Nathan and Ducruet, Andrew and Sciacca, Robert R. and Huang, Judy and Pinsky, David J. and Connolly, E. Sander},
