@article{devinBestEvidenceMultimodal2015,
  title = {Best Evidence in Multimodal Pain Management in Spine Surgery and Means of Assessing Postoperative Pain and Functional Outcomes},
  author = {Devin, Clinton J. and McGirt, Matthew J.},
