@article{thetbicollaborativeSerumSodiumIntracranial2019,
  title = {Serum Sodium and Intracranial Pressure Changes after Desmopressin Therapy in Severe Traumatic Brain Injury Patients: A Multi-Centre Cohort Study},
  shorttitle = {Serum Sodium and Intracranial Pressure Changes after Desmopressin Therapy in Severe Traumatic Brain Injury Patients},
